<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Pick up Location Name -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_pickuplocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pickup_location"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pickup_location_marker"
            android:src="@drawable/ic_room_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pickup_location_heart"
            android:src="@drawable/ic_favorite_black_24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <!-- Pick up Location PIN code -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_pickuplocation_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pickup_postal_code"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <!-- Pick up Location Date/Time -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_pickup_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pickup_date_time"
            android:inputType="datetime" />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Drop up Location Name -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_drop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/drop_location"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drop_location_marker"
            android:src="@drawable/ic_room_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drop_location_heart"
            android:src="@drawable/ic_favorite_black_24dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <!-- Drop Location PIN code -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_droplocation_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drop_postal_code"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <!-- Drop Location Date/Time -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_drop_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drop_date_time"
            android:inputType="datetime" />

    </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <!-- Way Bill -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <EditText
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:id="@+id/input_waybill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/waybill"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <!-- Remarks -->
        <TextView
            android:id="@+id/post_edit_job_barter_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:singleLine="false"
            android:ellipsize="end"
            android:ems="10"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:maxLength="200"
            android:gravity="top"
            android:enabled="false"
            android:hint="@string/remarks"
            android:visibility="visible"
            android:inputType="textCapSentences"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_weight="8.44" />

        <!--Save Button-->
        <Button
            android:id="@+id/btn_booking_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/save"
            android:textSize="16dip" />
    </LinearLayout>
</ScrollView>
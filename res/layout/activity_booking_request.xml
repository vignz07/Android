<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:fitsSystemWindows="true">

    <!-- Consignee Name -->
    <android.support.design.widget.TextInputLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/input_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/consignee_name"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- Pick up Location Name -->
    <android.support.design.widget.TextInputLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_pickuplocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pickup_location"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pickup_location_marker"
            android:src="@drawable/ic_room_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pickup_location_heart"
            android:src="@drawable/ic_favorite_black_24dp"/>

    </LinearLayout>

    <!-- Pick up Location PIN code -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <EditText
            android:id="@+id/input_pickuplocation_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pickup_postal_code"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <!-- Pick up Location Date/Time -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <EditText
            android:id="@+id/input_pickup_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pickup_date_time"
            android:inputType="datetime" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- Drop up Location Name -->
    <android.support.design.widget.TextInputLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_drop_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drop_location"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drop_location_marker"
            android:src="@drawable/ic_room_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drop_location_heart"
            android:src="@drawable/ic_favorite_black_24dp"/>

    </LinearLayout>

    <!-- Drop Location PIN code -->
    <android.support.design.widget.TextInputLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_droplocation_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drop_postal_code"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <!-- Drop Location Date/Time -->
    <android.support.design.widget.TextInputLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_drop_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/drop_date_time"
            android:inputType="datetime" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>